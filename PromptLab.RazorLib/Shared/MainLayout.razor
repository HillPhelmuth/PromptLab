@inherits LayoutComponentBase

<RadzenLayout Style="height:98vh;grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
	<RadzenHeader Style="height:2.5rem;">
		<RadzenRow>
			<RadzenColumn Size="1">
				<RadzenSidebarToggle Click="@(() => _sidebarExpanded = !_sidebarExpanded)" />
			</RadzenColumn>
			<RadzenColumn Size="10">
				<RadzenText TextAlign="TextAlign.Center" Text="@AppState.CurrentPageTitle" TextStyle="TextStyle.DisplayH6" Style="margin-top:.6rem"></RadzenText>
			</RadzenColumn>
			<RadzenColumn Size="1">
			</RadzenColumn>
		</RadzenRow>
	</RadzenHeader>
	<RadzenSidebar Responsive="false" @bind-Expanded="@_sidebarExpanded" style="width:250px;overflow:auto">

		<RadzenPanelMenu>
            <RadzenPanelMenuItem Path="" Text="Home" Click="@(() => SetHeaderTitle("Welcome to Prompt Lab!"))"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="playground" Text="Prompt Playground" Click="@(() => SetHeaderTitle("Prompt Lab Playground"))"></RadzenPanelMenuItem>
            <RadzenPanelMenuItem Path="prompt" Text="Prompt Helper" Click="@(() => SetHeaderTitle("Prompt Engineering Assistant"))"></RadzenPanelMenuItem>
			<RadzenPanelMenuItem Path="improve" Text="Meta Prompt Tool" Click="@(() => SetHeaderTitle("Meta Prompt Tool"))"></RadzenPanelMenuItem>
			<RadzenAccordion>
				<Items>
					<RadzenAccordionItem Icon="settings" Text="Application Settings" ExpandTitle="Update App Settings">
						<AppSettingsMenu></AppSettingsMenu>
					</RadzenAccordionItem>
					<RadzenAccordionItem Icon="speaker_notes" Text="Chat Settings" ExpandTitle="Update Chat Settings">
						<ChatSettingsMenu></ChatSettingsMenu>
					</RadzenAccordionItem>
					<RadzenAccordionItem Icon="model_training" Text="Model Settings" ExpandTitle="Update Model Settings">
						<ModelSettingsMenu></ModelSettingsMenu>
					</RadzenAccordionItem>
				</Items>
			</RadzenAccordion>
		</RadzenPanelMenu>

	</RadzenSidebar>
	<RadzenBody Style="padding: 4px 4px 0 0; height:98vh" @onclick="CloseSidebars">@Body</RadzenBody>
	
</RadzenLayout>
<RadzenComponents  />