@inherits LayoutComponentBase

<RadzenLayout Style="height:100vh;grid-template-columns: auto 1fr auto; grid-template-areas: 'rz-header rz-header rz-header' 'rz-sidebar rz-body rz-right-sidebar'">
	<RadzenHeader Style="height:2.5rem;">
		<RadzenRow>
			<RadzenColumn Size="1">
				<RadzenSidebarToggle Click="@(() => sidebarExpanded = !sidebarExpanded)" />
			</RadzenColumn>
			<RadzenColumn Size="10">
				<RadzenText TextAlign="TextAlign.Center" Text="@_title" TextStyle="TextStyle.DisplayH6" Style="margin-top:.5rem"></RadzenText>
			</RadzenColumn>
			<RadzenColumn Size="1">
			</RadzenColumn>
		</RadzenRow>
	</RadzenHeader>
	<RadzenSidebar Responsive="false" @bind-Expanded="@sidebarExpanded" style="width:250px">

		<RadzenPanelMenu>
			<RadzenPanelMenuItem Path="" Text="Home" Click="@(() => SetHeaderTitle("Prompt Lab Playground"))"></RadzenPanelMenuItem>
			<RadzenPanelMenuItem Path="prompt" Text="Prompt Helper" Click="@(() => SetHeaderTitle("Prompt Engineering Assistant"))"></RadzenPanelMenuItem>
			<RadzenPanelMenuItem Icon="expand" Text="Application Settings">
				<AppSettingsMenu></AppSettingsMenu>
			</RadzenPanelMenuItem>
			<RadzenPanelMenuItem Icon="expand" Text="Chat Settings">
				<ChatSettingsMenu></ChatSettingsMenu>
			</RadzenPanelMenuItem>
		</RadzenPanelMenu>

	</RadzenSidebar>
	<RadzenBody Style="padding: 4px 0 0 0; height:99vh" @onclick="CloseSidebars">@Body</RadzenBody>
	
</RadzenLayout>
<RadzenComponents />